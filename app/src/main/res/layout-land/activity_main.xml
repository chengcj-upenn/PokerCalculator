<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="600dp"
    android:layout_height="340dp"
    android:background="@color/colorPrimaryDark">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="top"
        android:orientation="vertical">

        <TextView
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:gravity="center"
            android:text="Betting limit"
            android:textColor="@color/white"
            android:textSize="28sp" />

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="25dp"
            android:layout_gravity="right"
            android:gravity="center">

            <TextView
                android:layout_width="90dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:gravity="left"
                android:text="Pot size = "
                android:textColor="@color/white"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/myPotSize"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:background="@color/white"
                android:ems="10"
                android:gravity="left"
                android:hint="100"
                android:inputType="textPersonName"
                android:text=""
                android:textColor="@color/colorPrimaryDark" />

        </LinearLayout>


        <TextView
            android:id="@+id/betLimit"
            android:layout_width="185dp"
            android:layout_height="40dp"
            android:layout_gravity="right"
            android:gravity="left"
            android:padding="10dp"
            android:text="Limit = XX"
            android:textColor="@color/white"
            android:textSize="18sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="top"
        android:orientation="vertical">

        <TextView
            android:id="@+id/winText"
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Win%"
            android:textColor="@color/white"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/myWinPercent"
            android:layout_width="190dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:gravity="left"
            android:text="Me = XX.X% +/- XX.X%"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/villanWinPercent"
            android:layout_width="190dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:gravity="left"
            android:text="Villan = XX.X% +/- XX.X%"
            android:textColor="@color/white"
            android:textSize="18sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="bottom"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_gravity="left"
            android:gravity="left"
            android:orientation="horizontal">

            <TextView
                android:layout_width="130dp"
                android:layout_height="25dp"
                android:layout_gravity="left"
                android:gravity="right"
                android:text="Total # of players = "
                android:textColor="@color/white" />

            <Spinner
                android:id="@+id/spinner_num_players"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:background="@color/white"
                android:gravity="center"
                android:textColor="@color/white"
                android:textStyle="bold" />


        </LinearLayout>

        <TextView
            android:layout_width="170dp"
            android:layout_height="25dp"
            android:layout_gravity="left"
            android:gravity="center"
            android:text="My Cards"
            android:textColor="@color/white" />

        <LinearLayout
            android:layout_width="170dp"
            android:layout_height="125dp"
            android:layout_gravity="left"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/myCard1"
                android:layout_width="@dimen/card_width"
                android:layout_height="@dimen/card_height"
                android:adjustViewBounds="true"
                android:onClick="setMyCard"
                android:padding="5dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/back" />

            <ImageButton
                android:id="@+id/myCard2"
                android:layout_width="@dimen/card_width"
                android:layout_height="@dimen/card_height"
                android:adjustViewBounds="true"
                android:onClick="setMyCard"
                android:padding="5dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/back" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="25dp">

            <TextView
                android:layout_width="250dp"
                android:layout_height="25dp"
                android:layout_gravity="left"
                android:gravity="center"
                android:text="Flop (3 cards)"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="25dp"
                android:layout_gravity="left"
                android:gravity="center"
                android:text="Turn"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="95dp"
                android:layout_height="25dp"
                android:layout_gravity="left"
                android:gravity="center"
                android:text="River"
                android:textColor="@color/white" />

        </LinearLayout>

        <View
            android:layout_width="250dp"
            android:layout_height="1dp"
            android:background="@color/white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:layout_gravity="bottom"
            android:gravity="left"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/flop1"
                android:layout_width="@dimen/card_width"
                android:layout_height="@dimen/card_height"
                android:adjustViewBounds="true"
                android:onClick="setMyCard"
                android:padding="5dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/back" />

            <ImageButton
                android:id="@+id/flop2"
                android:layout_width="@dimen/card_width"
                android:layout_height="@dimen/card_height"
                android:adjustViewBounds="true"
                android:onClick="setMyCard"
                android:padding="5dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/back" />

            <ImageButton
                android:id="@+id/flop3"
                android:layout_width="@dimen/card_width"
                android:layout_height="@dimen/card_height"
                android:adjustViewBounds="true"
                android:onClick="setMyCard"
                android:padding="5dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/back" />

            <ImageButton
                android:id="@+id/turn"
                android:layout_width="@dimen/card_width"
                android:layout_height="@dimen/card_height"
                android:adjustViewBounds="true"
                android:onClick="setMyCard"
                android:padding="5dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/back" />

            <ImageButton
                android:id="@+id/river"
                android:layout_width="@dimen/card_width"
                android:layout_height="@dimen/card_height"
                android:adjustViewBounds="true"
                android:onClick="setMyCard"
                android:padding="5dp"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/back" />
        </LinearLayout>

    </LinearLayout>

    <Button

        android:id="@+id/button"
        android:onClick="computeOdds"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/buttonstyle"
        android:text="Compute"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</android.support.constraint.ConstraintLayout>